<SpinnerOption>:
    font_size: 14


<Header>:
    id: header
    orientation: 'horizontal'
    size_hint_y: 0.1
    size_hint_min_y: 50
    size_hint_max_y: 60
    padding: 0
    spacing: 10
    Spinner:
        id: playback_device
        size_hint_y: None
        height: '48dp'
        font_size: 15
        on_text: root._onSpinnerSelect(self.text)

#    ActionButton:
#        icon: 'icons/play.png'
#        on_press: root.resume()

    ActionButton:
        id: player_button
        disabled: True
        status: 0
        icon: 'icons/pause.png'
        on_press: root.toggle_pause(self)

    Button:
        id: ports
        size_hint_y: None
        size_hint_x: 0.2
        height: '48dp'
        font_size: 15
        on_release: ports_dropdown.open(self)

        Widget:
            on_parent: ports_dropdown.dismiss()

        DropDown:
            auto_width: False
            width: 375
            id: ports_dropdown
            on_select: ports.text = args[1]
            on_select: root._setSelectedPort(args[1])

    ActionButton:
        icon: 'icons/refresh.png'
        on_press: root._updatePorts()


